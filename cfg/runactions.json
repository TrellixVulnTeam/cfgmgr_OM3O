{
  "1": {
      "pkg": {
        "name": "sysstat",
        "action": "install",
        "onfailure": "stop"
      }
  },
  "2": {
      "file": {
        "path": "/tmp/temp.txt",
        "action": "create",
        "mode": "777",
        "owner": "root",
        "group": "root",
        "sourcepath": "/tmp/src.txt",
        "onfailure": "stop"
      }
  },
  "3": {
      "service": {
        "name": "sysstat",
        "action":"start",
        "onfailure": "stop"
      }
  },
  "4": {
    "service": {
      "name": "sysstat",
      "action": "enable"
    }
  }
}