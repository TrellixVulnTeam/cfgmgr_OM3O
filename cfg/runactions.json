{
  "1": {
	  "pkg": {
		"name": "apache2",
		"action": "install",
		"onfailure": "stop"
	  }
  },
  "2": {
	  "pkg": {
		"name": "php",
		"action": "install",
		"onfailure": "stop"
	}
  },
  "3": {
	"file": {
		"path": "/var/www/html/index.html",
		"action": "rename",
		"newpath": "/var/www/html/index.back",
		"onfailure": "stop"
	}
  }
  "4": {
      "file": {
        "path": "/var/www/html/index.php",
        "action": "create",
        "mode": "644",
        "owner": "root",
        "group": "root",
        "sourcepath": "/tmp/index.php",
        "onfailure": "stop"
      }
  },
  "5": {
      "service": {
        "name": "apache2",
        "action": "start",
        "onfailure": "stop"
      }
  },
  "6": {
    "service": {
      "name": "apache2",
      "action": "enable"
    }
  }
}